# Discord
DISCORD_BOT_TOKEN=

# Claude Code (API Key不要 — claude CLIのサブスク枠を使用)
LLM_MODEL=sonnet

# Guild Chat デフォルトモデル (haiku / sonnet / opus)
CHAT_MODEL=haiku

# Cron (cron expression, Asia/Tokyo)
CRON_SCHEDULE=0 1 * * *
CRON_REPORT_SCHEDULE=0 9 * * *

# Queue
QUEUE_DATA_DIR=./data
QUEUE_MAX_BATCH_SIZE=5
QUEUE_COOLDOWN_MS=60000
QUEUE_DAILY_BUDGET_USD=20
QUEUE_MAX_RETRIES=2
QUEUE_RETRY_BASE_MS=300000

# タイチョー (実行隊長)
TAICHO_MAX_BUDGET_USD=5
TAICHO_MAX_RETRIES=3
TAICHO_TIMEOUT_MS=1800000
TAICHO_STRATEGY=claude-cli

# Usage Monitor (Playwright スクレイピング)
USAGE_SCRAPE_SCHEDULE=*/20 * * * *
USAGE_REPORT_SCHEDULE=0 9 * * *
USAGE_ALERT_THRESHOLD=80
USAGE_CHROME_USER_DATA_DIR=./data/chrome-usage-profile
USAGE_MONITOR_TIMEOUT_MS=60000

# Note: GitHub Token不要 — `gh auth login` で認証済みのgh CLIを使用
# Note: Guild ID / Channel ID は projects.json で管理
