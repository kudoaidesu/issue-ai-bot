{
  "name": "claude-crew",
  "version": "0.1.0",
  "description": "Issue駆動 × AI駆動の自律型開発ワークフロー",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "setup": "tsx src/cli/index.ts setup",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "web": "tsx src/web/server.ts",
    "web:dev": "tsx watch src/web/server.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.50",
    "@hono/node-server": "^1.19.9",
    "dotenv": "^16.4.0",
    "hono": "^4.12.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
